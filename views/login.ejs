<% include partials/template/head %>
<body>
	<div class="container-fluid" style="padding-top: 20px;">
		<div class="row">

			<main class="col-sm-6 col-md-5 col-lg-4 mx-auto">
				<h1><em>Login</em></h1>

				<!-- login error message -->
				<% if (loginErrorMessage.length > 0) { %>
					<p class="alert alert-danger"><%= loginErrorMessage %></p>
				<% }; %>
				
				<!-- login form -->
				<form action="/accounts/auth/login" method="POST">
					<div class="form-group">
						<input
							class="form-control"
							type="text"
							name="username"
							placeholder="Username or email"
							value="<%= typeof username != 'undefined' ? username : '' %>"
						/>
					</div>
					
					<div class="form-group">
						<input class="form-control" type="password" name="password" placeholder="Password" required />
					</div>
					
					<div>
						<input class="btn btn-primary" type="submit" value="Sign In"/>
					</div>
				</form>
				
				<!-- login options -->
				<div class="login-options">
					<p>No account? <a href="/accounts/signup"><b>Create one</b></a> or:</p>
					<a class="btn btn-block btn-outline-success" href="/accounts/auth/google"><strong>Sign in with Google</strong></a>
					<a class="btn btn-block btn-outline-primary" href="/accounts/auth/facebook"><strong>Sign in with Facebook</strong></a>
				</div>
			</main>

		</div><!-- row -->
	</div><!-- container -->

	<% include partials/template/script %>
</body>